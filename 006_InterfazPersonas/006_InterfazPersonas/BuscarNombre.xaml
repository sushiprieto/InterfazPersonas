<UserControl x:Class="_006_InterfazPersonas.BuscarNombre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_006_InterfazPersonas"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel x:Name="spFormulario" Background="#B2DFDB" >

        <Label Content="BUSCAR POR NOMBRE" Foreground="#004D40" Margin="0,10,0,20" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Segoe UI Black"/>

        <TextBox Name="txbNombre" Margin="10" MinHeight="30" MinWidth="100" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>

        <Button Name="btnNombre" Click="btnNombre_Click" MaxWidth="70" >
            <StackPanel>
                <Image Source="Images/view.png" MaxWidth="50" ToolTip="Mostrar"/>
            </StackPanel>
        </Button>

        <Label HorizontalAlignment="Center">Historial de busquedas</Label>

        <ScrollViewer Height="200">
            <TextBlock x:Name="txtNombre" Margin="20" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        </ScrollViewer>

    </StackPanel>
</UserControl>
