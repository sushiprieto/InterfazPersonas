<UserControl x:Class="_006_InterfazPersonas.MenosPesoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_006_InterfazPersonas"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel x:Name="spFormulario" Background="#B2DFDB">

        <TextBlock Text="PERSONA CON MENOS PESO" Foreground="#004D40" Margin="0,10,0,20" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Segoe UI Black" TextWrapping="Wrap" TextAlignment="Center"/>

        <Button Name="btnMenosPeso" Margin="10" Click="btnMenosPeso_Click" MaxWidth="70">
            <StackPanel>
                <Image Source="Images/view.png" MaxWidth="50" ToolTip="Mostrar"/>
            </StackPanel>
        </Button>

        <TextBlock x:Name="txbMenosPeso" Margin="20" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

    </StackPanel>

</UserControl>
